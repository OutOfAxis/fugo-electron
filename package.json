{
  "name": "fugo-cms-windows-player",
  "version": "1.3.0",
  "description": "Fugo CMS Windows Player",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w"
  },
  "repository": "https://github.com/OutOfAxis/fugo-electron",
  "keywords": [
    "digital signage",
    "dooh"
  ],
  "author": "Fugo team",
  "devDependencies": {
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "appId": "ai.fugo.windowplayer",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "dependencies": {
    "update-electron-app": "^2.0.1"
  }
}
